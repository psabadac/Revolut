<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CountryFlag">
        <item name="android:layout_width">@dimen/min_size</item>
        <item name="android:layout_height">@dimen/min_size</item>
    </style>

    <style name="CurrencyTitle">
        <item name="android:textColor">@color/primaryBlack</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CurrencyDescription">
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:textColor">@color/primaryGray</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CurrencyAmount">
        <item name="android:minWidth">@dimen/min_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/amount_text_size</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/primaryBlack</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="RatesTitle" parent="CurrencyAmount">
        <item name="android:paddingLeft">@dimen/title_padding</item>
    </style>
</resources>
